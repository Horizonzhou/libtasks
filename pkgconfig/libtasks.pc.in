prefix=@CMAKE_INSTALL_PREFIX@
exec_prefix=${prefix}
libdir=${prefix}/@INSTALL_LIB_DIR@
includedir=${prefix}/include

Name: libtasks 
Description: An I/O task system written in modern C++ that implements the Leader/Followers pattern and uses libev as event loop.
Version: @LIBRARY_VERSION@
URL: https://github.com/apohl79/libtasks
Libs: -L${libdir} -ltasks
Cflags: -I${includedir}/tasks/
